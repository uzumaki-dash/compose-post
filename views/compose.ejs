<%- include("partials/header"); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="inputTitle">Title</label><br>
    <input class="form-control" type="text" name="inputTitle" placeholder="Input Title" autocomplete="off"><br>
    <label for="inputPost">Post</label><br>
    <textarea class="form-control" name="inputPost" rows="8" cols="80" placeholder="Input Post"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>


